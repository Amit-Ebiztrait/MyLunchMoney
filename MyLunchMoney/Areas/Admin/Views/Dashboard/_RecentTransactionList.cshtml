@using MyLunchMoney.Models
@model List<RecentTransactionModel>

@if (Model != null)
{
    <table class="data_table" id="recentTransaction+@Model[0].FundTransactionId">
        <thead>
            <tr>
                <th>TID</th>
                <th>Parent Name</th>
                <th>DATE</th>
                <th>AMOUNT</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    var _img = string.IsNullOrEmpty(item.ImagePath) ? "/Content/Admin/img/default-user-black.svg" : item.ImagePath;
                    <tr>
                        <td>@item.FundTransactionId</td>
                        <td><div class="img_tbl" onclick="openNav()" style="cursor:pointer"><img src="@_img" alt="img" height="50" width="50" style="border-radius:50%;"><span class="name_user">@item.Name</span></div></td>
                        <td>@item.CreatedOn.ToString("dd/MM/yyyy")</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align: center;">No Records</td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    $("#recentTransaction+@Model[0].FundTransactionId").dataTable();
</script>