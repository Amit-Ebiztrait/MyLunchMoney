
@{
    ViewBag.Title = "Fee Types";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <style>
        .example-modal .modal {
            position: relative;
            top: auto;
            bottom: auto;
            right: auto;
            left: auto;
            display: block;
            z-index: 1;
        }

        .example-modal .modal {
            background: transparent !important;
        }

        .btn-bs-file {
            position: relative;
        }

            .btn-bs-file input[type="file"] {
                position: absolute;
                top: -9999999;
                filter: alpha(opacity=0);
                opacity: 0;
                width: 0;
                height: 0;
                outline: none;
                cursor: inherit;
            }
    </style>
}
<div class="muser">
    <div class="mhead">
        <h3>Manage FeeType</h3>
        <span onclick="openNav()" id="btn-additem">Add Fees Type</span>
        
    </div>
    <div class="tbahead">
        

    </div>
    <div class="tabs_cover">
        <div id="tab-1" class="tab-content active">
            <div class="table_cvr">
                <table id="dataTable" class="data_table" style="width:100% !important">
                    <thead>
                        <tr>
                            <th>Fees Type</th>
                            <th>Price</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times; FeesType</a>
    <div class="form-popup">
        <form id="add-FeeType-form" name="add-FeeType-form" role="form">
            <input type="hidden" id="FeeTypeId" />
            <input type="hidden" id="SchoolId" />

            <div class="title">
                <h3>Fees Type Detail</h3>
            </div>
            <div class="fields">
                <div class="form-group">
                    <input type="text" id="FeeTypeName" name="FeeTypeName" placeholder="Fees Type" maxlength="100" oninput="this.value=this.value.replace(/[^A-Za-z0-9 -]/g,'')" />
                </div>
                <div class="form-group">
                    <input type="text" id="FeeTypePrice" name="FeeTypePrice" placeholder="FeeType Price" maxlength="5" oninput="this.value=this.value.replace(/[^0-9]/g,'')" />
                </div>
                <div class="form-group">
                    <select class="form-select" id="ddlcurrencytype" name="ddlcurrencytype">
                        <option  value="USD">USD</option>
                        <option selected value="JMD">JMD</option>
                    </select>
                </div>


            </div>
            <div class="form-group" style="margin-top:20px !important;">
                <input type="submit" value="Submit" class="submit-btn" id="submitForm" onclick="SaveItem()" />
                <input type="button" value="Reset" class="reset-btn" id="reset-btn" onclick="ResetItem()">
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/pages/FeeType.js"></script>
}
