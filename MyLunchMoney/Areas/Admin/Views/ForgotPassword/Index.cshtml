@using MyLunchMoney.Models
@model ForgotPasswordViewModel
@{
	ViewBag.Title = "Forgot Password";
	Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="~/Content/favicon/favicon.png" rel="icon" type="image/png" sizes="32x32" />
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
	<link rel="stylesheet" href="~/Scripts/adminlte/components/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/Content/Admin/css/custom.css" rel="stylesheet" />
	<title>Forgot Password | Mi Lunch Money</title>
	<style>
		span.field-validation-error.text-danger {
			float: left;
			font-size: 12px !important;
			margin: -5px 0px 10px 5px;
			width: 100%;
			text-align: left;
			color: #dc3545 !important;
		}

		li {
			list-style-type: none;
			text-align: left;
			color: red;
		}
	</style>
</head>

<body>
	<div class="login bg">
		<div class="center-form">
			<h2>Forgot Password</h2>
			@using (Html.BeginForm("Index", "ForgotPassword", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
			{
				@Html.AntiForgeryToken()
				if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
				{
					<div class="alert alert-error bg-danger">
						<button type="button" class="close" data-dismiss="alert">×</button>
						@Html.ValidationSummary(true)
					</div>
				}
				if (TempData["ErrorMessage"] != null)
				{
					<div class="alert alert-danger alert-dismissible">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						@TempData["ErrorMessage"]
					</div>
				}
				if (TempData["Message"] != null)
				{
					<div class="alert alert-success alert-dismissible">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						@TempData["Message"]
					</div>
				}
				<input type="text" placeholder="Email Address" id="Email" name="Email" />
				@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
				<input type="submit" value="Submit">
				<a href="/Admin/Login">Back to Login</a>
			}

		</div>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
</body>
</html>

