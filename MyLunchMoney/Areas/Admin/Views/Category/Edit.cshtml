@model MyLunchMoney.Models.Category
@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Category
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="/Category">Categories</a></li>
            <li class="active">Edit Category</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    @*<div class="box-header with-border">
                            <h3 class="box-title">Edit User</h3>
                        </div>*@
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" id="add-category-form">


                        <div class="box-body">
                            <input type="hidden" id="hdnCategoryId" name="hdnCategoryId" value="@Model.CategoryId" />
                            <div>
                                @if(Model.CategoryImage != null)
                                {
                                  <img src="@Model.CategoryImage" alt="Alternate Text" />
                                }
                            </div>
                            <div class="form-group">
                                <label for="CategoryImage">Category Image</label>
                                <input type="file" class="form-control" id="ImageFile" name="ImageFile" value="@Model.CategoryImage" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryName">Category Name</label>
                                <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Enter Category Name" value="@Model.CategoryName">
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" class="btn btn-flat btn-success" onclick="SaveCategory()">Update</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script src="~/Scripts/adminlte/js/pages/Categories.js"></script>
}
